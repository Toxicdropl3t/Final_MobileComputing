<!-- res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/your_background_image">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#0C640C"
        android:padding="16dp"
        android:text="Nucor Safe Spot Acrros the top"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <!-- Buttons for each area -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A description explaining what NSS is?" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maybe a Scrollable textview with clickable items inside for each area people can click on??" />

    <!-- Add more buttons as needed -->

</LinearLayout>